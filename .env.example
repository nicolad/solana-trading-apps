# Root-level environment variables for the monorepo
# Copy this file to .env and fill in your secrets

# ============================================
# Helius Configuration
# ============================================
# Helius API Key (used across all services)
# Get your key at: https://dev.helius.xyz/
HELIUS_API_KEY=your_helius_api_key_here

# ============================================
# Solana Configuration
# ============================================
# Solana RPC (devnet by default)
RPC_URL=https://api.devnet.solana.com

# LaserStream Endpoint (devnet)
LASERSTREAM_ENDPOINT=https://laserstream-devnet-ewr.helius-rpc.com

# ============================================
# Wallet Configuration
# ============================================
# Private key for executing trades (base58 encoded)
# ⚠️ NEVER commit this to git!
PRIVATE_KEY=your_base58_private_key_here

# ============================================
# Cloudflare Configuration (laserstream-container)
# ============================================
# Cloudflare Account ID (for wrangler)
CLOUDFLARE_ACCOUNT_ID=a036f50e02431c89170b8f977e982a3d

# Container image registry
CONTAINER_REGISTRY=registry.cloudflare.com/a036f50e02431c89170b8f977e982a3d

# ============================================
# Deployment URLs (for reference)
# ============================================
# LaserStream Container (live)
LASERSTREAM_CONTAINER_URL=https://laserstream-container.eeeew.workers.dev
